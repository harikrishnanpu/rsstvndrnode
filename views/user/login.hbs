    <form action="/login" method="POST">
    <div class="form-group">
    <label for="exampleInputEmail1">Name</label>
    <input type="text" class="form-control" name="name" id="lname" placeholder="Enter Your Name" required>
  </div>
  <div class="form-group">
    <label for="exampleInputEmail1">Phone</label>
    <input type="text" name="phone" class="form-control {{#if loginErr}}error{{/if}}{{#if loginErr1}}error{{/if}}" id="lphone" {{#if loginErr}}placeholder="Check Your Phone Number" style="border: 4px solid #dc3545;" {{/if}}   {{#if loginErr1}} style="border: 4px solid #dc3545;" placeholder="Enter Your Registered Number"{{/if}} placeholder="Enter Your Phone Number" required>
    <small id="emailHelp" class="form-text text-muted">Enter Your Registered Phone Number</small>
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Password</label>
    <input type="text" name="password" {{#if loginErr}} style="border: 2px solid #dc3545;" {{/if}} {{#if loginErr1}} style="border: 4px solid #dc3545;" {{/if}} {{#if ploginErr}} style="border: 4px solid #dc3545;" {{/if}} class="form-control {{#if loginErr}}error{{/if}}{{#if ploginErr}}error{{/if}}" id="exampleInputPassword1" {{#if ploginErr}} placeholder="Check Your Password" {{/if}} placeholder="Password" required>
    <small id="emailHelp" class="form-text text-muted" >Enter Your Registered password</small>
  </div>
  <input type="submit" value="Submit" onclick="changeText()"  id="submitbtn" class="btn btn-color w-100 mb-5">
</form>
</section>




