      {{/if}}
      <div class="section_right">

        <label class="toogle"><input type="checkbox" /><span class="box"></span></label>
      </div>
    </div><br>
    {{#if noclassess}}<h5 class="text-fluid text-center">No {{ghosh.ghosh}} Classes Found</h5> <div class="text-center"><a href="tel:7306899364" class='btn btn-color text-center'>Contact</a></div>  {{else}}<h5 class="text-fluid text-center">All {{ghosh.ghosh}} Classes</h5>     <hr style="margin-top: 2px;">{{/if}}
      {{#if classes}}
      {{#each classes}}
