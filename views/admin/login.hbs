<section style="background-color: #474e5d;color: white;" class="container">
    <h3 class="text-center mt-5">Admin Login Form</h3>   
     <p class="text-right">--By,Rss Tvndr</p>
    <form action="/admin/login" method="POST">
    {{#if loginErr}}
    <p class="btn btn-danger form-control">Invalid Phone Number Or Password</p>
    {{/if}}
    <div class="form-group">
    <label for="exampleInputEmail1">Name</label>
    <input type="text" class="form-control" name="name"  placeholder="Enter Your Name">
  </div>
  <div class="form-group">
    <label for="exampleInputEmail1">Phone</label>
    <input type="text" name="phone" class="form-control" placeholder="Enter Your Phone Number">
    <small id="emailHelp" class="form-text text-muted">Enter Your Registered Phone Number</small>
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Password</label>
    <input type="text" name="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
    <small id="emailHelp" class="form-text text-muted" >Enter Your Registered password</small>
  </div>
  <button type="submit" class="btn btn-color w-100 mb-5">Submit</button>
</form>

</section>