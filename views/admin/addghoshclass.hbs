<section style="background-color: #474e5d; color: white;" class="container">
    <h5 class="text-center mt-5">Add <span style="color: orange;">Ghosh</span> Class</h5>
    <p class="text-center">Form Submitting By, {{Admin.name}}</p>
<form class="mt-5 container" method="POST" action="/admin/add-ghosh-class">
  <div class="form-group">
      <label>Ghosh Class</label>
      <select class="form-control" name="ghosh" id="ghosh" required>
          <option value="" selected disabled>Select..</option>
          <option>Vamshi</option>
          <option >Anak</option>
          <option >Sringh</option>
          <option >Shankh</option>
      </select>
  </div>
    <div class="form-group">
    <label for="exampleFormControlInput1">Name Of Tutor</label>
    <input type="text" class="form-control" id="exampleFormControlInput1" name="tutor" placeholder="Your Name" value="{{Admin.name}}">
  </div>
    <div class="form-group">
    <label for="exampleFormControlInput1">Class Time</label>
    <input type="time" class="form-control" pattern="^([0-1]?[0-9]|2[0-4]):([0-5][0-9])(:[0-5][0-9])?$" id="exampleFormControlInput1" name="classtime" value="20:20" required>
  </div>
      <div class="form-group">
    <label for="exampleFormControlInput1">Class Date</label>
    <input type="date" class="form-control" id="classdate" name="classdate" value="2021-06-30" required>
  </div>
  <div class="form-group">
      <label>Through</label>
      <select class="form-control" name="through" id="through" required>
          <option value="" selected disabled>Select..</option>
          <option>Google Meet</option>
          <option value="" disabled>Rss Tvndr Video Chat</option>
      </select>
  </div>
  <input type="text" style="display: none;" name="link" id="link" value="https://meet.google.com/xke-tnez-cru">
  <div class="form-group">
      <input type="submit" class="form-control btn btn-color" id="exampleFormControlInput1">
  </div>
</form>
</section>