<section class="container" style="width: 90%;">
    <h5 class="text-center mt-5">Add-Karyakari Details</h5>
<form class="text-center mt-5 container" method="POST" action="/admin/add-karyakari">
  <div class="form-group">
    <label for="exampleFormControlInput1">Karyakari Title</label>
    <input type="text" class="form-control" id="exampleFormControlInput1" name="title" placeholder="title">
  </div>
    <div class="form-group">
    <label for="exampleFormControlInput1">Description</label>
    <input type="text" class="form-control" id="exampleFormControlInput1" name="description" placeholder="description">
  </div>
    <div class="form-group">
    <label for="exampleFormControlInput1">Karyakari Date</label>
    <input type="text" class="form-control" id="exampleFormControlInput1" name="kdate" placeholder="1/10/30">
  </div>
    <div class="form-group">
    <label for="exampleFormControlInput1">Karyakari Time</label>
    <input type="text" class="form-control" id="exampleFormControlInput1" name="ktime" placeholder="4:00 pm">
  </div>
    <div class="form-group">
    <label for="exampleFormControlInput1">Shaka</label>
    <input type="text" class="form-control" id="exampleFormControlInput1" name="shaka" placeholder="Samyuktha,Tharuna,Vyavasayi">
  </div>
      <div class="form-group">
    <label for="exampleFormControlInput1">Place</label>
    <input type="text" class="form-control" id="exampleFormControlInput1" name="place" placeholder="Place">
  </div>
        <div class="form-group">
    <label for="exampleFormControlInput1">Phone Number</label>
    <input type="text" class="form-control" id="exampleFormControlInput1" name="phone" placeholder="Your Phone Number">
  </div>
  <div class="form-group">
      <label for="exampleFormControlInput1">Extra Details</label>
      <textarea name="text"  style="width: 100%;height: 100px;"  class="form-control" id="exampleFormControlInput1" placeholder="Type Extra Details Here..."></textarea>
  </div>
  <input type="text" style="display: none;"  name="date" id="date">
  <input type="text" name="time" id="time" style="display: none;">
  <input type="text" name="link" id="link" style="display: none;" value="https://meet.google.com/rfj-pwze-ffa">
  <input type="hidden" name="submituser" id="submituser" value="{{Admin.name}}">
  <div class="form-group">
      <input type="submit" class="form-control btn btn-color" id="exampleFormControlInput1">
  </div>
</form>
</section>

<script>
  var tdate = new Date().getDate();
  var tmonth = new Date().getMonth() + 1;
  var tyear = new Date().getFullYear();
  var hour = new Date().getHours();
  var minute = new Date().getMinutes();
  var second = new Date().getSeconds();
  document.getElementById('date').value =  tdate  + "/" + tmonth + "/" + tyear;
  document.getElementById('time').value =  hour  + ":" + minute + ":" + second;
</script>